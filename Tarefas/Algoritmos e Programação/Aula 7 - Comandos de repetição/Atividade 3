Algoritmo "3"

//Crie um programa que lê dois números inteiros e imprime todos os números pares entre eles.
//Assuma que o segundo número é maior que o primeiro.

var
   x, y, i : inteiro


inicio

   escreval("Digite o primeiro número inteiro: ")
   leia(x)

   enquanto y < x faca
      escreval("Digite o segundo número inteiro: ")
      leia(y)
   fimenquanto

   y <- y - 1
   x <- x + 1

   para i de x ate y faca
      se i mod 2 = 0 entao
         escreval("Par encontrado: ", i)
      fimse
   fimpara

fimalgoritmo